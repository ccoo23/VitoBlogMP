/* pages/join/join.wxss */
swiper {
  width: 100%;
  height: 340rpx;
}

.slide-image{
  width: 100%;
}

swiper image {
  display: block;
}

view {
  height: 70vh;
}

.items {
  background-color: rgba(202, 237, 238, 0.6);
  opacity: 0.7;
  display: flex;
  flex-direction: row;
  height: 20vh;
  z-index: 100;
  margin-bottom: 2rpx;
}

.logo {
  height: 15vh;
  width: 15vh;
  margin: 3vh 3vh 2vh 1vh;
}

.item-body {
  display: flex;
  flex-grow: 4;
  height: inherit;
  flex-direction: column;
}

.click {
  flex-grow: 1;
  height: 6vh;
  /* margin: 60rpx 10rpx 0 10rpx; */
  background-color: rgb(114, 185, 162);
  color: white;
  font-size: 15px;
  padding: 0 2vw 3vw 2vw;
  margin: 2vh 3vw 0 2vw;
}

.text {
  flex-grow: 1;
}

.title {
  display: block;
}

.buttons {
  flex-grow: 1;
  display: flex;
  margin: 2vh 3vw 0 2vw;
}